{
    "type": "AdaptiveCard",
    "horizontalAlignment": "Center",
    "separator": true,
    "height": "stretch",
    "body": [
        {
            "type": "ColumnSet",
            "horizontalAlignment": "Left",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "extraLarge",
                            "weight": "bolder",
                            "text": "Contoso Cafe"
                        },
                        {
                            "type": "TextBlock",
                            "size": "medium",
                            "text": "Just want to make sure I get this right .. ",
                            "wrap": true
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "spacing": "medium",
                    "items": [
                        {
                            "type": "Image",
                            "horizontalAlignment": "center",
                            "url": "http://contosocafeontheweb.azurewebsites.net/assets/contoso_logo_black.png",
                            "size": "medium"
                        }
                    ],
                    "width": "auto"
                }
            ]
        },
		{
			"type": "Input.Text",
			"placeholder": "Please type in your name..",
			"style": "text",
			"maxLength": 0,
			"id": "userName"
		}
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {
                "intent": "Who_are_you"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}